<!DOCTYPE html>
<html>
<head>
	<title>Todo List</title>
	<link rel="stylesheet" type="text/css" href="assets/css/todos.css">
	<link href='https://fonts.googleapis.com/css?family=Roboto:400,700,500' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css">
	<script type="text/javascript" src="assets/js/lib/jquery-2.1.4.min.js"></script>
</head>
<body>

<div id="container">
	<h1>To-Do List <i class="fa fa-plus"></i></h1>
	<form action="/TodoList" method="POST">
	<input type="text" name="task" placeholder="Add New Todo">
    </form>
            
	<ul>
		<% todoItem.forEach((todo)=>{  %>
		<li><span><form action="/deleteTodo" method="POST"><button type="submit" name="deleteId" value="<%= todo._id %>" style="background: #e74c3c; border: 3px solid #e74c3c;"><i class="fa fa-trash"></i></button></form></span><%= todo.task %></li>
		<% }) %>

	</ul>
</div>
<a href="/logout" style=" position:fixed;
   right:10px;
   top:5px;">logout</a>
<script type="application/javascript" src="assets/js/todos.js"></script>
</body>
</html>